{
	"name": "blitze/content",
    "type": "phpbb-extension",
	"description": "Create and manage content types for phpBB SiteMaker",
	"homepage": "https://github.com/blitze/phpBB-ext-sitemaker_content",
	"version": "3.0.0-dev",
	"time": "2014-06-21 01:01:01",
	"license": "GPL-2.0",
	"authors": [{
		"name": "Daniel A.",
		"email": "shizzah@hotmail.com",
		"homepage": "https://github.com/blitze",
		"role": "Lead Developer"
	}],
	"repositories": [{
		"type": "vcs",
		"name": "blitze/sitemaker",
		"url": "https://github.com/blitze/phpBB-ext-sitemaker.git"
	}],
	"require": {
		"php": ">=5.4",
		"composer/installers": "^1.1",
		"blitze/sitemaker": "dev-develop",
		"cocur/slugify": "1.4.1",
		"urodoz/truncate-html": "@stable"
	},
	"extra": {
		"display-name": "SiteMaker Content Types",
		"soft-require": {
			"phpbb/phpbb": ">=3.2.1,<3.3.0@dev"
		},
		"installer-paths": {
            "../{$name}/": ["type:phpbb-extension"]
        },
		"version-check": {
			"host": "www.phpbb.com",
			"directory": "/customise/db/extension/sitemaker_content",
			"filename": "version_check"
		}
	}
}
